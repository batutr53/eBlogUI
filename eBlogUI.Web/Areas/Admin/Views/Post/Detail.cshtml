@model eBlogUI.Models.Dtos.Post.PostDetailDto
@{
    ViewData["Title"] = "Post Detayı";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h4 text-gray-800">Post Detayı</h1>
        <a href="/Admin/Post" class="btn btn-sm btn-outline-secondary rounded-pill">
            <i class="fas fa-arrow-left"></i> Geri Dön
        </a><div>
            <a href="/Admin/Post/Edit/@Model.Id" class="btn btn-sm btn-outline-primary rounded-pill mr-2">
                <i class="fas fa-edit"></i>
            </a>
            <button onclick="deletePost('@Model.Id')" class="btn btn-sm btn-outline-danger rounded-pill">
                <i class="fas fa-trash"></i>
            </button>
        </div>

    </div>

    <div class="card shadow mb-4 border-left-primary">
        <div class="card-body">
            <h5 class="text-dark font-weight-bold">@Model.Title</h5>
            <p class="mb-2"><strong>Slug:</strong> @Model.Slug</p>
            <p class="mb-2"><strong>Kategori:</strong> @Model.CategoryName</p>
            <p class="mb-3"><strong>Yazar:</strong> @Model.AuthorName</p>
            <hr />
            <div>
                <h6 class="text-muted">İçerik:</h6>
                <div class="border p-3 rounded bg-light">
                    @Html.Raw(Model.Content)
                </div>
            </div>
            <hr />
            <div>
                <h6 class="text-muted mb-2">SEO Bilgileri</h6>
                @if (Model.SeoMetadata != null)
                {
                    <ul class="list-group">
                        <li class="list-group-item"><strong>Meta Title:</strong> @Model.SeoMetadata.MetaTitle</li>
                        <li class="list-group-item"><strong>Meta Description:</strong> @Model.SeoMetadata.MetaDescription</li>
                        @if (!string.IsNullOrEmpty(Model.SeoMetadata.CanonicalUrl))
                        {
                            <li class="list-group-item"><strong>Canonical URL:</strong> @Model.SeoMetadata.CanonicalUrl</li>
                        }
                        @if (!string.IsNullOrEmpty(Model.SeoMetadata.OgTitle))
                        {
                            <li class="list-group-item"><strong>OG Title:</strong> @Model.SeoMetadata.OgTitle</li>
                        }
                        @if (!string.IsNullOrEmpty(Model.SeoMetadata.OgImage))
                        {
                            <li class="list-group-item"><strong>OG Görsel:</strong> <a href="@Model.SeoMetadata.OgImage" target="_blank">@Model.SeoMetadata.OgImage</a></li>
                        }
                        @if (!string.IsNullOrEmpty(Model.SeoMetadata.TwitterTitle))
                        {
                            <li class="list-group-item"><strong>Twitter Title:</strong> @Model.SeoMetadata.TwitterTitle</li>
                        }
                        @if (!string.IsNullOrEmpty(Model.SeoMetadata.TwitterDescription))
                        {
                            <li class="list-group-item"><strong>Twitter Description:</strong> @Model.SeoMetadata.TwitterDescription</li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-danger">SEO bilgisi bulunmamaktadır.</p>
                }
            </div>
        </div>
    </div>
</div>
